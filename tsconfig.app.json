{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",  // Menggunakan ECMAScript Modules
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",  // Menggunakan JSX otomatis
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "jest.setup.ts"
  ]
}
